// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Users {
    id_user                  String        @id @default(uuid())
    name                     String
    email                    String        @unique
    password                 String
    supervisor               String?       @db.Uuid
    created_at               DateTime      @default(now())
    role                     Permissions?   @relation(fields: [permissionsId_permission], references: [id_permission], onDelete: Cascade) 
    permissionsId_permission Int?
    usersTokens              usersTokens[]

    @@map("users")
}

model Permissions {
    id_permission Int    @id @default(autoincrement())
    role          String @unique

    Users Users[]
    @@map("permissions")
}

model usersTokens {
    id_token        String   @id @default(uuid())
    refresh_token   String
    fk_user_id_user Users?   @relation(fields: [usersId_user], references: [id_user], onDelete: Cascade)
    usersId_user    String?
    expires_date    DateTime
    created_at      DateTime @default(now())
}
