{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "baseUrl": ".",
      "lib": [
        "es6"
      ],
      "allowJs": true,
      "resolveJsonModule": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "removeComments": true,
      "typeRoots": [
        "./node_modules/@types",
        "./src/@types"
      ],
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
    }
  }